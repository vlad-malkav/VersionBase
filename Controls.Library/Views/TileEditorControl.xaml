<UserControl x:Class="Controls.Library.Views.TileEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls.Library.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <local:TileImageTypeView x:Name="TileImageTypeViewControl" Height="Auto" VerticalAlignment="Top"/>
        <local:TileColorView Grid.Row="1" x:Name="TileColorViewControl" Height="Auto" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
