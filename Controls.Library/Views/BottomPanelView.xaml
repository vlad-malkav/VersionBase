<UserControl x:Class="Controls.Library.Views.BottomPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:Controls.Library.Views"
             xmlns:viewModels="clr-namespace:Controls.Library.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:BottomPanelViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" >
    <Grid Height="0" Width="{Binding ActualWidth, RelativeSource = {RelativeSource AncestorType = {x:Type Grid}}}" Background="DarkOrange">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock>BottomPanelView</TextBlock>
    </Grid>
</UserControl>
